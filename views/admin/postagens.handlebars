<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add" class="btn btn-success">Nova Postagem</a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <hr>  
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <small>Data de publicação: {{data}}</small>

            <br>
            <button class="btn btn-sm btn-secondary mt-2">Leia mais</button>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem registrada</h4>
{{/each}}

