<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add" class="btn btn-success">Nova Postagem</a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <hr>  
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <small>Data de publicação: {{data}}</small> <br>
            <small>Categoria: {{categoria.nome}}</small> <br> <br>
                        
            <a href="/admin/postagens/edit/{{_id}}" class="btn btn-info">Editar</a>
            <a href="/admin/postagens/delete/{{_id}}" class="btn btn-danger">Excluir</a>         

        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem registrada</h4>
{{/each}}

