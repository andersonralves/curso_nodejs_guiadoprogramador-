<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add" class="btn btn-success">Nova Categoria</a>

{{#each categorias }}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small> <br>
            <small>Data de criação: {{date}}</small> <br>            
            <form action="/admin/categorias/delete" method="POST" class="mt-3">
                <a href="/admin/categorias/edit/{{_id}}" class="btn btn-info">Editar</a>

                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger">Excluir</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}

