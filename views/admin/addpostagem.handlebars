{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova Postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título</label>
            <input type="text" id="titulo" name="titulo" placeholder="Título da Postagem" class="form-control">

            <label for="slug">Slug</label>
            <input type="text" id="slug" name="slug" placeholder="Slug da postagem" class="form-control">

            <label for="descricao">Descrição</label>
            <input type="text" id="descricao" name="descricao" placeholder="Descrição da postagem" class="form-control">

            <label for="conteudo">Conteúdo</label>
            <textarea class="form-control" name="conteudo" id="conteudo" cols="30" rows="10"></textarea>

            <label for="categoria"><a href="/admin/categorias">Categoria:</a></label>
            <select name="categoria" id="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            
            <button type="submit" class="btn btn-success mt-3">Criar Postagem</button>
        </form>
    </div>
</div>